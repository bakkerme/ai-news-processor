rule "cursor-rules-must-be-mdc" {
  description = "All cursor rules must be written in .mdc format."
  match = /.*/
  condition = !ends_with($FILENAME, ".mdc")
  error = "Cursor rule files must have a .mdc extension."
  applies_to = ["cursor_rule_file"]
}
